<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button">
        <item name="android:paddingVertical">19dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="button_fill">
        <item name="android:paddingVertical">19dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_fill</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="auth_title">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="app_input">
        <item name="android:background">@drawable/app_input</item>
        <item name="android:padding">17dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textCursorDrawable">@drawable/app_cursor</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="app_text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>